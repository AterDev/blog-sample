@* List page template (single-file placement). Preserves indentation and new lines for clean output. *@
@{
  var name = ModelName ?? "Model";
  var camel = (ModelName ?? "Model").ToCamelCase();
  var idFilterFields = FilterPropertyInfos.Where(p => p.Type != null && p.Type.ToLower().Contains("guid")).ToList();
}
<div class="@camel-list-page">
  <div class="toolbar">
    <div class="d-flex align-items-center gap-2 justify-content-between p-1">
      <div class="d-flex gap-2">
        @foreach (var f in FilterPropertyInfos)
        {
          <mat-form-field appearance="outline" subscriptSizing="dynamic">
            @if (f.Type != null && f.Type.ToLower().Contains("string"))
            {
              <mat-label>@(f.CommentSummary ?? f.Name)</mat-label>
              <input matInput [(ngModel)]="filter.@(f.Name.ToCamelCase())" placeholder="@(f.CommentSummary ?? f.Name)" />
            }
            else if (f.IsEnum)
            {
              <mat-label>@(f.CommentSummary ?? f.Name)</mat-label>
              <mat-select [(ngModel)]="filter.@(f.Name.ToCamelCase())">
                <mat-option *ngFor="let opt of @(f.Type) | toKeyValue" [value]="opt.value">
                  {{ opt.value | enumText:'@(f.Type)' }}
                </mat-option>
              </mat-select>
            }
            else if (f.Type != null && f.Type.ToLower().Contains("guid"))
            {
              <mat-label>@(f.CommentSummary ?? f.Name)</mat-label>
              <input matInput 
                     [(ngModel)]="filter.@(f.Name.ToCamelCase())" 
                     [matAutocomplete]="@(f.Name.ToCamelCase())Auto"
                     placeholder="@(f.CommentSummary ?? f.Name)" />
              <mat-autocomplete #@(f.Name.ToCamelCase())Auto="matAutocomplete">
                <mat-option *ngFor="let opt of @(f.Name.ToCamelCase())Options" [value]="opt.id">
                  {{ opt.name }}
                </mat-option>
              </mat-autocomplete>
            }
            else
            {
              <mat-label>@(f.CommentSummary ?? f.Name)</mat-label>
              <input matInput [(ngModel)]="filter.@(f.Name.ToCamelCase())" />
            }
          </mat-form-field>
        }
        <button matButton="filled" (click)="filter()">{{ i18nKeys.common.search| translate }}</button>
      </div>

      <div>
        <button matButton="filled" (click)="openAdd()">
          {{ i18nKeys.common.add | translate }}
        </button>
      </div>
    </div>
  </div>

  <table mat-table [dataSource]="dataSource" #table="matTable">
    @foreach (var c in ItemPropertyInfos)
    {
      <ng-container matColumnDef="@c.Name">
        <th mat-header-cell *matHeaderCellDef>
          @(c.CommentSummary ?? c.Name)
        </th>
        <td mat-cell *matCellDef="let item;table:table">
          {{ item.@(c.Name.ToCamelCase()) }}
        </td>
      </ng-container>
    }

    <ng-container matColumnDef="actions">
      <th mat-header-cell *matHeaderCellDef>
        {{ 'common.actions' | translate }}
      </th>
      <td mat-cell *matCellDef="let item">
        <button mat-icon-button class="secondary" (click)="openDetail(item.id)"><mat-icon>visibility</mat-icon></button>
        <button mat-icon-button class="primary" (click)="openEdit(item.id)"><mat-icon>edit</mat-icon></button>
        <button mat-icon-button class="accent" (click)="deleteItem(item.id)"><mat-icon>delete</mat-icon></button>
      </td>
    </ng-container>

    <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
    <tr mat-row *matRowDef="let row; columns: displayedColumns;"></tr>

  </table>

  <mat-paginator [length]="total" [pageSize]="filter.pageSize" (page)="pageChanged($event)"></mat-paginator>

</div>