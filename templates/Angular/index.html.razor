@* List page template (single-file placement). Preserves indentation and new lines for clean output. *@
@{
  var name = ModelName ?? "Model";
  var camel = (ModelName ?? "Model").ToCamelCase();
  var idFilterFields = FilterPropertyInfos.Where(p => p.Type != null && p.Type.ToLower().Contains("guid")).ToList();
  
  string RenderFilterField(PropertyInfo f)
  {
      var camelFieldName = f.Name.ToCamelCase();
      var label = f.CommentSummary ?? f.Name;
      
      if (f.Type != null && f.Type.ToLower().Contains("string"))
      {
          return $"<mat-form-field appearance=\"outline\" subscriptSizing=\"dynamic\">{NewLine}" +
                 $"      <mat-label>{label}</mat-label>{NewLine}" +
                 $"      <input matInput [(ngModel)]=\"filterDto.{camelFieldName}\" placeholder=\"{label}\" />{NewLine}" +
                 $"    </mat-form-field>";
      }
      else if (f.IsEnum)
      {
          return $"<mat-form-field appearance=\"outline\" subscriptSizing=\"dynamic\">{NewLine}" +
                 $"      <mat-label>{label}</mat-label>{NewLine}" +
                 $"      <mat-select [(ngModel)]=\"filterDto.{camelFieldName}\"{(f.IsList ? " multiple" : "")}>{NewLine}" +
                 $"        @for (opt of {f.Type} | toKeyValue; track opt.value) {{{NewLine}" +
                 $"          <mat-option [value]=\"opt.value\">{NewLine}" +
                 $"            {{{{ opt.value | enumText:'{f.Type}' }}}}{NewLine}" +
                 $"          </mat-option>{NewLine}" +
                 $"        }}{NewLine}" +
                 $"      </mat-select>{NewLine}" +
                 $"    </mat-form-field>";
      }
      else if (f.Type != null && f.Type.ToLower().Contains("guid"))
      {
          var optionsFieldName = (camelFieldName.EndsWith("s") ? camelFieldName.Substring(0, camelFieldName.Length - 1) : camelFieldName) + "Options";
          return $"<mat-form-field appearance=\"outline\" subscriptSizing=\"dynamic\">{NewLine}" +
                 $"      <mat-label>{label}</mat-label>{NewLine}" +
                 $"      <mat-select [(ngModel)]=\"filterDto.{camelFieldName}\"{(f.IsList ? " multiple" : "")}>{NewLine}" +
                 $"        @for (opt of {optionsFieldName}; track opt.id) {{{NewLine}" +
                 $"          <mat-option [value]=\"opt.id\">{NewLine}" +
                 $"            {{{{ opt.name }}}}{NewLine}" +
                 $"          </mat-option>{NewLine}" +
                 $"        }}{NewLine}" +
                 $"      </mat-select>{NewLine}" +
                 $"    </mat-form-field>";
      }
      else if (f.Type.ToLower().Contains("date"))
      {
          return $"<mat-form-field appearance=\"outline\" subscriptSizing=\"dynamic\">{NewLine}" +
                 $"      <mat-label>{label}</mat-label>{NewLine}" +
                 $"      <input matInput [matDatepicker]=\"{camelFieldName}Picker\" [(ngModel)]=\"filterDto.{camelFieldName}\" placeholder=\"{label}\" />{NewLine}" +
                 $"      <mat-datepicker-toggle matSuffix [for]=\"{camelFieldName}Picker\"></mat-datepicker-toggle>{NewLine}" +
                 $"      <mat-datepicker #{camelFieldName}Picker></mat-datepicker>{NewLine}" +
                 $"    </mat-form-field>";
      }
      else
      {
          return $"<mat-form-field appearance=\"outline\" subscriptSizing=\"dynamic\">{NewLine}" +
                 $"      <mat-label>{label}</mat-label>{NewLine}" +
                 $"      <input matInput [(ngModel)]=\"filterDto.{camelFieldName}\" />{NewLine}" +
                 $"    </mat-form-field>";
      }
  }
}
<div class="@camel-list-page">
  <div class="toolbar">
    <div class="d-flex align-items-center gap-2 justify-content-between p-1">
      <div class="d-flex gap-2 align-items-center">
        @foreach (var f in FilterPropertyInfos)
        {
          WriteLiteral(RenderFilterField(f));
        }

        <button matButton="filled" (click)="filter()">{{ i18nKeys.common.search| translate }}</button>
      </div>

      <div>
        <button matButton="filled" (click)="openAdd()">
          {{ i18nKeys.common.add | translate }}
        </button>
      </div>
    </div>
  </div>

  <table mat-table [dataSource]="dataSource" #table="matTable">
    @foreach (var c in ItemPropertyInfos)
    {
      <ng-container matColumnDef="@c.Name">
        <th mat-header-cell *matHeaderCellDef>
          @(c.CommentSummary ?? c.Name)
        </th>
        <td mat-cell *matCellDef="let item;table:table">
          {{ item.@(c.Name.ToCamelCase()) }}
        </td>
      </ng-container>
    }

    <ng-container matColumnDef="actions">
      <th mat-header-cell *matHeaderCellDef>
        {{ 'common.actions' | translate }}
      </th>
      <td mat-cell *matCellDef="let item">
        <button mat-icon-button class="secondary" (click)="openDetail(item.id)"><mat-icon>visibility</mat-icon></button>
        <button mat-icon-button class="primary" (click)="openEdit(item.id)"><mat-icon>edit</mat-icon></button>
        <button mat-icon-button class="accent" (click)="deleteItem(item.id)"><mat-icon>delete</mat-icon></button>
      </td>
    </ng-container>

    <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
    <tr mat-row *matRowDef="let row; columns: displayedColumns;"></tr>

  </table>

  <mat-paginator [length]="total" [pageSize]="filterDto.pageSize" (page)="pageChanged($event)"></mat-paginator>

</div>
