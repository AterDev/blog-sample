  var hasIdAddFields = AddPropertyInfos.Any(p => p.Type != null && p.Type.ToLower().Contains("guid"));
  var idAddFields = AddPropertyInfos.Where(p => p.Type != null && p.Type.ToLower().Contains("guid")).ToList();
